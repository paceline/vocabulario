<% if @test.continue? %>
  <h1>Question <%= @test.current + 1 %> / <%= @test.limit %></h1>
  <h2><%= @test.current_question.word %><%= ", #{@test.current_question.gender}" unless @test.current_question.gender == "N/A" %></h2>
  <% form_remote_for @score do %>
    <%= hidden_field 'test', 'score_id', :value => @score.id %>
    <p><%= text_field_tag 'test[answer]' %>
    <%= submit_tag 'Go' %></p>
  <% end %>
<% else %>
  <h1>Congratulations</h1>
  <p>You have completed the <%= @test.from.word %> vocabulary test.</p>
  <p>Successfully? Check out your scores on the right and judge for yourself.</p>
<% end %>