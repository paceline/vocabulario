%p#taglist
  = render :partial => 'shared/taglist_detail', :object => taglist

- form_remote_tag :url => tag_path(taglist.id, :type => taglist.class.to_s), :method => :put, :complete => "$('taglist','tag_form').invoke('toggle')", :success => visual_effect(:highlight, "taglist"), :update => "taglist", :html => {:id => "tag_form", :style => "display:none"} do 
  = text_field_tag "tag_list", taglist.tags.collect{|t| t.name}.join(", "), :size => 70, :onKeyDown => "toggleElementsOnEscape(event, ['tag_form','taglist'])"
