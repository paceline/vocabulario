- if user_signed_in?
  .content
    .tabs.green
      %h1 Manage lists
    %p
      = link_to('Add', new_user_list_path(current_user.permalink))
      - if @list && !@list.new_record? && @list.user == current_user
        |
        = link_to('Edit', edit_list_path(@list.permalink)) 
        |
        = link_to('Delete', list_path(@list), :confirm => 'Are you sure you want to delete this list?', :method => :delete)
