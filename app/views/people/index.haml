- content_for :title, "Explore Pronouns"

- content_for :sidebar do
  = render :partial => 'shared/manage'

- @languages.each do |l|
  .content
    %h2= l.word
    - unless l.people.blank?
      %ul{ :id => "pronouns_#{l.id}" }
        - l.people.find(:all, :order => 'pronoun').each do |t|
          %li{ :id => "pronoun_#{t.id}" }
            = link_to t.pronoun, pronoun_path(t)
            = link_to('delete', pronoun_path(t), :confirm => 'Are you sure you want to delete this pronoun?', :method => :delete, :remote => true, :class => 'edit_link') if signed_in_as_admin?
    - else
      No pronouns have been added yet