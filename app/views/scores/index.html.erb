<% content_for :sidebar do %>
  <div class="content">
    <h1>Try it!</h1>
    <p>Think you can beat them? <%= link_to 'Click here', '/' %> to get started.</p>
  </div>
<% end %>

<div class="content">
  <h1>Top Scores</h1>
  <ol>
    <% @scores.each do |score| %>
    <li><h2><%= link_to(score.user.login, user_path(score.user)) %> (<%= score.ratio %>)</h2> (on a <%= score.questions %> question <%= score.language.word %> test)</li>
    <% end %>
  </ol>
</div>