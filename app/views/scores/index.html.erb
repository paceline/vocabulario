<% content_for :sidebar do %>
  <div class="content">
    <h1>You can do better?</h1>
    <p>Well, you can prove it right now.</p>
    <p><%= link_to 'Click here', '/' %> to get started and show 'em.</p>
  </div>
<% end %>

<div class="content">
  <h1>Top Scores</h1>
  <ol>
    <% @scores.each do |score| %>
    <li><em><%= score.user ? link_to(score.user.login, user_path(score.user)) : "Guest" %></em> got <em><%= score.ratio %>%</em> right on a <%= score.questions %> question <%= score.language.word %> test</li>
    <% end %>
  </ol>
</div>