<% content_for :sidebar do %>
  <div id="test_score" class="content">
    <%= render @score %>
  </div>
<% end %>

<div id="test_pane" class="content">
  <h1>Welcome!</h1>
  <p>Just a tiny vocabulary trainer I more or less wrote for personal use only. Feel free to try it! Start your first test:</p>
  <% form_remote_for @score do %>
    <p><%= label_tag 'Languages' %>
    From <%= select :test, :from, Vocabulary.languages.collect {|p| [ p.word, p.id ] } %> to <%= select :test, :to, Vocabulary.languages.collect {|p| [ p.word, p.id ] }, { :selected => Vocabulary.languages[1].id } %></p>
    
    <p><%= label_tag 'Number of Questions' %>
    <%= select :test, :limit, VocabularyTest.limits %></p>
    
    <p><%= label_tag 'Tagged with' %>
    <%= select :test, :tags, Tag.find(:all, :order => 'name').collect {|t| [ t.name, t.id ] }, { }, { :multiple => true, :size => 5 } %></p>
    
    <p><%= label_tag 'Ready?' %>
    <%= submit_tag 'Start the test' %></p>
  <% end %>
</div>