- content_for :notice do
  %h1 Welcome to Vocabulario
  %p A very lo-fi vocabulary trainer I more or less wrote for personal use only

- content_for :sidebar do
  #list_stuff= render :partial => 'lists/list' if signed_in?

%ul#latest.list
  - @latest.each do |vocabulary|
    %li
      %ul.inline
        %li.highlight= "#{distance_of_time_in_words(vocabulary.updated_at, Time.now).capitalize} ago"
        %li= link_to(vocabulary.word, vocabulary_path(vocabulary.permalink))
        - vocabulary.translations.each do |i|
          %li= i.word