<% content_for :sidebar do %>
  <%= render :partial => 'shared/manage' %>
<% end %>

<div class="content">
  <h1>New vocabulary</h1>
  <p>Fill out the form below to submit a new vocabulary.</p>
  
  <%= error_messages_for :vocabulary %>
  <% form_for :vocabulary, :url => vocabularies_path do |f| -%>
    <div class="fields">
      <%= label_tag 'word' %>
      <%= f.text_field :word %>
    </div>
    <div class="fields">
      <%= label_tag 'article' %>
      <%= f.text_field :gender %>
    </div>
    <div class="fields">
      <%= label_tag 'Language' %>
      <%= f.select :language_id, Vocabulary.languages.collect {|p| [ p.word, p.id ] } %>
    </div>
    <div class="fields">
      <%= submit_tag 'Save' %>
    </div>
  <% end -%>
</div>
