= wiki_page_style

- content_for :sidebar do
  = render :partial => 'base_wiki_pages/tagcloud'

- content_for :notice do
  %h1 New wiki page

- if params[:preview]
  .wiki_content
    = wiki_content @page.content

- wiki_page_form do |f|
  = f.hidden_field :previous_version_number, :value => f.object.last_version_number
  = f.hidden_field :comment, :value => 'First Revision'
  %p
    Title:
    %br
    = f.text_field :title
  %p
    Refers to language (optional)
    %br
    = f.select :language_id, Language.list.collect {|p| [ p.word, p.id ] }
  %p
    Public:
    %br
    = f.check_box :public
  %p
    Content:
    %br
    = f.text_area :content
  
  %input{ :type => "submit",  :name => "save",  :value => "Save page", :class => "submit"}
